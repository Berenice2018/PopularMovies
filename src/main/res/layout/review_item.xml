<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name ="item"
            type="de.avkterwey.popularmovies.data.model.ReviewItem"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/poster_min_height"
        android:orientation="horizontal"
        android:layout_margin="@dimen/poster_horizontal_margin"
        android:layout_marginEnd="@dimen/poster_horizontal_margin"
        android:layout_marginBottom="@dimen/poster_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/poster_horizontal_margin"
            >


            <TextView
                android:id="@+id/review_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryDarkColor"
                android:lineSpacingMultiplier="1.3"
                android:contentDescription="review text"
                tools:text="@string/title"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>

